<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="aesth_clic.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:aesth_clic.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F7F4FD">

    <Page.Resources>
        <!-- Force light theme on inputs so text is always visible -->
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="TextControlBackground"              Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlBackgroundPointerOver"   Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlBackgroundFocused"       Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlForeground"              Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlForegroundPointerOver"   Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlForegroundFocused"       Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForeground"              Color="#999999" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForegroundPointerOver"   Color="#999999" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForegroundFocused"       Color="#999999" />
                    <SolidColorBrush x:Key="TextControlBorderBrush"             Color="#C4A8E8" />
                    <SolidColorBrush x:Key="TextControlBorderBrushPointerOver"  Color="#7C3FBD" />
                    <SolidColorBrush x:Key="TextControlBorderBrushFocused"      Color="#5B2D8E" />
                    <!-- ComboBox -->
                    <SolidColorBrush x:Key="ComboBoxBackground"                 Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver"      Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxBackgroundPressed"          Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxForeground"                 Color="#1A1A1A" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrush"                Color="#C4A8E8" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrushPointerOver"     Color="#7C3FBD" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrushPressed"         Color="#5B2D8E" />
                    <SolidColorBrush x:Key="ComboBoxPlaceholderForeground"      Color="#999999" />
                    <!-- Button override to purple -->
                    <SolidColorBrush x:Key="AccentButtonBackground"             Color="#5B2D8E" />
                    <SolidColorBrush x:Key="AccentButtonBackgroundPointerOver"  Color="#6B2FA0" />
                    <SolidColorBrush x:Key="AccentButtonBackgroundPressed"      Color="#4A2272" />
                    <SolidColorBrush x:Key="AccentButtonForeground"             Color="White" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="TextControlBackground"              Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlBackgroundPointerOver"   Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlBackgroundFocused"       Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlForeground"              Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlForegroundPointerOver"   Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlForegroundFocused"       Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForeground"              Color="#999999" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForegroundPointerOver"   Color="#999999" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForegroundFocused"       Color="#999999" />
                    <SolidColorBrush x:Key="TextControlBorderBrush"             Color="#C4A8E8" />
                    <SolidColorBrush x:Key="TextControlBorderBrushPointerOver"  Color="#7C3FBD" />
                    <SolidColorBrush x:Key="TextControlBorderBrushFocused"      Color="#5B2D8E" />
                    <SolidColorBrush x:Key="ComboBoxBackground"                 Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver"      Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxBackgroundPressed"          Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxForeground"                 Color="#1A1A1A" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrush"                Color="#C4A8E8" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrushPointerOver"     Color="#7C3FBD" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrushPressed"         Color="#5B2D8E" />
                    <SolidColorBrush x:Key="ComboBoxPlaceholderForeground"      Color="#999999" />
                    <SolidColorBrush x:Key="AccentButtonBackground"             Color="#5B2D8E" />
                    <SolidColorBrush x:Key="AccentButtonBackgroundPointerOver"  Color="#6B2FA0" />
                    <SolidColorBrush x:Key="AccentButtonBackgroundPressed"      Color="#4A2272" />
                    <SolidColorBrush x:Key="AccentButtonForeground"             Color="White" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="TextControlBackground"              Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlBackgroundPointerOver"   Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlBackgroundFocused"       Color="#FFFFFF" />
                    <SolidColorBrush x:Key="TextControlForeground"              Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlForegroundPointerOver"   Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlForegroundFocused"       Color="#1A1A1A" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForeground"              Color="#999999" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForegroundPointerOver"   Color="#999999" />
                    <SolidColorBrush x:Key="TextControlPlaceholderForegroundFocused"       Color="#999999" />
                    <SolidColorBrush x:Key="TextControlBorderBrush"             Color="#C4A8E8" />
                    <SolidColorBrush x:Key="TextControlBorderBrushPointerOver"  Color="#7C3FBD" />
                    <SolidColorBrush x:Key="TextControlBorderBrushFocused"      Color="#5B2D8E" />
                    <SolidColorBrush x:Key="ComboBoxBackground"                 Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver"      Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxBackgroundPressed"          Color="#FFFFFF" />
                    <SolidColorBrush x:Key="ComboBoxForeground"                 Color="#1A1A1A" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrush"                Color="#C4A8E8" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrushPointerOver"     Color="#7C3FBD" />
                    <SolidColorBrush x:Key="ComboBoxBorderBrushPressed"         Color="#5B2D8E" />
                    <SolidColorBrush x:Key="ComboBoxPlaceholderForeground"      Color="#999999" />
                    <SolidColorBrush x:Key="AccentButtonBackground"             Color="#5B2D8E" />
                    <SolidColorBrush x:Key="AccentButtonBackgroundPointerOver"  Color="#6B2FA0" />
                    <SolidColorBrush x:Key="AccentButtonBackgroundPressed"      Color="#4A2272" />
                    <SolidColorBrush x:Key="AccentButtonForeground"             Color="White" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- ── LEFT PANEL ── -->
        <Grid Grid.Column="0" Background="#5B2D8E">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="16">

                <Border
                    Width="80" Height="80"
                    CornerRadius="40"
                    Background="White"
                    HorizontalAlignment="Center">
                    <TextBlock
                        Text="A"
                        FontSize="40"
                        FontWeight="Bold"
                        Foreground="#5B2D8E"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>

                <StackPanel HorizontalAlignment="Center" Spacing="2">
                    <TextBlock
                        Text="Aesthetic"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center" />
                    <TextBlock
                        Text="Clinic"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalAlignment="Center" />
                </StackPanel>

                <TextBlock
                    Text="Your beauty, our expertise."
                    FontSize="12"
                    Foreground="#C9A8E8"
                    HorizontalAlignment="Center"
                    Margin="0,8,0,0" />

            </StackPanel>
        </Grid>

        <!-- ── RIGHT PANEL ── -->
        <Grid Grid.Column="1" Background="#F7F4FD">
            <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="320"
        Spacing="0">

                <TextBlock
            Text="Welcome back"
            FontSize="24"
            FontWeight="SemiBold"
            Foreground="#2D1457"
            Margin="0,0,0,6" />
                <TextBlock
            Text="Sign in to your account"
            FontSize="13"
            Foreground="#7C5FA0"
            Margin="0,0,0,32" />

                <!-- Username -->
                <TextBlock
            Text="Username"
            FontSize="12"
            FontWeight="SemiBold"
            Foreground="#4A2880"
            Margin="0,0,0,6" />
                <TextBox
            x:Name="UsernameBox"
            PlaceholderText="Enter username"
            FontSize="14"
            Height="44"
            Padding="12,11,12,0"
            VerticalAlignment="Center"
            Margin="0,0,0,20"
            CornerRadius="6"
            BorderThickness="1.5"
            KeyDown="OnEnterPressed" />

                <!-- Password -->
                <TextBlock
            Text="Password"
            FontSize="12"
            FontWeight="SemiBold"
            Foreground="#4A2880"
            Margin="0,0,0,6" />
                <PasswordBox
            x:Name="PasswordBox"
            PlaceholderText="Enter password"
            FontSize="14"
            Height="44"
            Padding="12,11,12,0"
            VerticalAlignment="Center"
            Margin="0,0,0,20"
            CornerRadius="6"
            BorderThickness="1.5"
            KeyDown="OnEnterPressed" />

                <!-- Role -->
                <TextBlock
            Text="Role"
            FontSize="12"
            FontWeight="SemiBold"
            Foreground="#4A2880"
            Margin="0,0,0,6" />
                <ComboBox
            x:Name="RoleComboBox"
            PlaceholderText="Select your role"
            FontSize="14"
            Height="44"
            Padding="10,0,0,0"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Left"
            Margin="0,0,0,28"
            CornerRadius="6"
            BorderThickness="1.5">
                    <ComboBoxItem Content="Super Admin"    Tag="super_admin" />
                    <ComboBoxItem Content="Admin / Client" Tag="admin" />
                    <ComboBoxItem Content="Doctor"         Tag="doctor" />
                    <ComboBoxItem Content="Receptionist"   Tag="receptionist" />
                    <ComboBoxItem Content="Pharmacist"     Tag="pharmacist" />
                </ComboBox>

                <!-- Error -->
                <TextBlock
            x:Name="ErrorText"
            Text=""
            FontSize="12"
            Foreground="#C0392B"
            Margin="0,-20,0,12"
            Visibility="Collapsed" />

                <!-- Login button -->
                <Button
    x:Name="LoginButton"
    HorizontalAlignment="Stretch"
    Height="48"
    FontSize="15"
    FontWeight="SemiBold"
    CornerRadius="6"
    Click="OnLoginClicked"
    Style="{ThemeResource AccentButtonStyle}">
                    <Grid>
                        <!-- Normal label -->
                        <TextBlock
            x:Name="LoginButtonText"
            Text="Sign In"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />

                        <!-- Loading state -->
                        <StackPanel
            x:Name="LoginLoadingPanel"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="10"
            Visibility="Collapsed">
                            <ProgressRing
                IsActive="True"
                Width="18"
                Height="18"
                Foreground="White" />
                            <TextBlock
                Text="Signing in..."
                VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Button>

            </StackPanel>
        </Grid>

    </Grid>
</Page>