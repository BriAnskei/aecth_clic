<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="aesth_clic.Views.Roles.Receptionist.Pages.AppointmentManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:aesth_clic.Views.Roles.Receptionist.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F7F4FD">

    <Page.Resources>

        <local:StringToBrushConverter x:Key="StringToBrush" />

        <Style x:Key="ColHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="10" />
            <Setter Property="FontWeight"        Value="SemiBold" />
            <Setter Property="Foreground"        Value="#9B80C4" />
            <Setter Property="CharacterSpacing"  Value="50" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="13" />
            <Setter Property="Foreground"        Value="#2D1554" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming"      Value="CharacterEllipsis" />
        </Style>

        <Style x:Key="CellSecondaryStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="12" />
            <Setter Property="Foreground"        Value="#9B80C4" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming"      Value="CharacterEllipsis" />
        </Style>

    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Padding="28,24,28,32" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ROW 0 · Page Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="2">
                    <TextBlock
                        Text="Appointments"
                        FontSize="26" FontWeight="Bold"
                        Foreground="#2D1554" />
                    <TextBlock
                        Text="View and manage scheduled appointments for patient procedures"
                        FontSize="13" Foreground="#9B80C4" />
                </StackPanel>

                <Button
                    Grid.Column="1"
                    x:Name="BtnAddAppointment"
                    Click="AddAppointment_Click"
                    VerticalAlignment="Center"
                    Padding="14,9"
                    CornerRadius="8"
                    BorderThickness="0"
                    Background="#5B2D8E">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="13" Foreground="White" VerticalAlignment="Center" />
                        <TextBlock Text="Add Appointment" FontSize="13" Foreground="White" FontWeight="SemiBold" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- ROW 1 · Search Toolbar -->
            <Border
                Grid.Row="1"
                Background="White"
                BorderBrush="#E4DAF5"
                BorderThickness="1"
                CornerRadius="12"
                Padding="16,12">
                <AutoSuggestBox
                    x:Name="SearchBox"
                    PlaceholderText="Search patient name or procedure…"
                    QueryIcon="Find"
                    VerticalAlignment="Center"
                    BorderBrush="#E4DAF5"
                    BorderThickness="1"
                    CornerRadius="8"
                    TextChanged="SearchBox_TextChanged" />
            </Border>

            <!-- ROW 2 · Appointments Table -->
            <Border
                Grid.Row="2"
                Background="White"
                BorderBrush="#E4DAF5"
                BorderThickness="1"
                CornerRadius="12"
                Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Grid Grid.Row="0" Padding="20,16,20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Spacing="2">
                            <TextBlock Text="Appointment Records" FontSize="15" FontWeight="SemiBold" Foreground="#2D1554" />
                            <TextBlock Text="All scheduled appointments" FontSize="12" Foreground="#9B80C4" />
                        </StackPanel>
                        <Border Grid.Column="1" Background="#EDE4F9" CornerRadius="6" Padding="10,4" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtRowCount" Text="Showing 0 appointments" FontSize="12" Foreground="#5B2D8E" FontWeight="SemiBold" />
                        </Border>
                    </Grid>

                    <!-- Column Headers -->
                    <Grid Grid.Row="1">
                        <Border Background="#F7F4FD" Padding="20,9">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="60" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="PATIENT"         Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="1" Text="ASSIGNED DOCTOR" Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="2" Text="PROCEDURE"       Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="3" Text="SCHEDULED DATE"  Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="4" Text="ACTIONS"         Style="{StaticResource ColHeaderStyle}" HorizontalAlignment="Center" />
                            </Grid>
                        </Border>
                        <Border Height="1" Background="#E4DAF5" VerticalAlignment="Bottom" />
                    </Grid>

                    <!-- Data Rows -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="520">
                        <ItemsControl x:Name="AppointmentListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:AppointmentItem">
                                    <StackPanel>
                                        <Border Padding="20,0">
                                            <Grid MinHeight="64">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="220" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="60" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Patient Name + Avatar -->
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                                    <Border
                                                        Width="36" Height="36" CornerRadius="18"
                                                        Background="{Binding AvatarColor, Converter={StaticResource StringToBrush}}">
                                                        <TextBlock
                                                            Text="{x:Bind Initials}"
                                                            FontSize="13" FontWeight="SemiBold" Foreground="White"
                                                            HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                    <TextBlock
                                                        Text="{x:Bind PatientName}"
                                                        Style="{StaticResource CellTextStyle}"
                                                        FontWeight="SemiBold" />
                                                </StackPanel>

                                                <!-- Assigned Doctor -->
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Text="{x:Bind DoctorName}"
                                                    Style="{StaticResource CellTextStyle}" />

                                                <!-- Procedure Name -->
                                                <TextBlock
                                                    Grid.Column="2"
                                                    Text="{x:Bind ProcedureName}"
                                                    Style="{StaticResource CellTextStyle}" />

                                                <!-- Scheduled Date -->
                                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                                    <FontIcon Glyph="&#xE787;" FontSize="11" Foreground="#5B2D8E" VerticalAlignment="Center" />
                                                    <StackPanel Spacing="1">
                                                        <TextBlock
                                                            Text="{x:Bind AppointmentDate}"
                                                            Style="{StaticResource CellTextStyle}"
                                                            FontWeight="SemiBold" />
                                                        <TextBlock
                                                            Text="{x:Bind AppointmentTime}"
                                                            Style="{StaticResource CellSecondaryStyle}" />
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Kebab Menu -->
                                                <Button
                                                    Grid.Column="4"
                                                    Tag="{x:Bind AppointmentId}"
                                                    Click="KebabMenu_Click"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Width="32" Height="32"
                                                    Padding="0"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    CornerRadius="6"
                                                    ToolTipService.ToolTip="More actions">
                                                    <TextBlock
                                                        Text="&#x2026;"
                                                        FontSize="18"
                                                        Foreground="#5B2D8E"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Margin="0,-4,0,0" />
                                                    <Button.Flyout>
                                                        <MenuFlyout Placement="BottomEdgeAlignedRight">
                                                            <MenuFlyoutItem
                                                                x:Name="MenuView"
                                                                Text="View"
                                                                Tag="{x:Bind AppointmentId}"
                                                                Click="ViewAppointment_Click">
                                                                <MenuFlyoutItem.Icon>
                                                                    <FontIcon Glyph="&#xE7B3;" Foreground="#2E7D32" />
                                                                </MenuFlyoutItem.Icon>
                                                            </MenuFlyoutItem>
                                                            <MenuFlyoutItem
                                                                Text="Edit / Reschedule"
                                                                Tag="{x:Bind AppointmentId}"
                                                                Click="EditAppointment_Click">
                                                                <MenuFlyoutItem.Icon>
                                                                    <FontIcon Glyph="&#xE70F;" Foreground="#0078D4" />
                                                                </MenuFlyoutItem.Icon>
                                                            </MenuFlyoutItem>
                                                            <MenuFlyoutSeparator />
                                                            <MenuFlyoutItem
                                                                Text="Cancel Appointment"
                                                                Tag="{x:Bind AppointmentId}"
                                                                Click="CancelAppointment_Click"
                                                                Foreground="#C0392B">
                                                                <MenuFlyoutItem.Icon>
                                                                    <FontIcon Glyph="&#xE711;" Foreground="#C0392B" />
                                                                </MenuFlyoutItem.Icon>
                                                            </MenuFlyoutItem>
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                </Button>

                                            </Grid>
                                        </Border>
                                        <Border Height="1" Background="#F0EAF8" Margin="20,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>
</Page>