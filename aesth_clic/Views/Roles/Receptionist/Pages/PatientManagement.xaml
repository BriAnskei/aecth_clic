<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="aesth_clic.Views.Roles.Receptionist.Pages.PatientManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:aesth_clic.Views.Roles.Receptionist.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F7F4FD">

    <Page.Resources>

        <local:StringToBrushConverter x:Key="StringToBrush" />

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background"      Value="White" />
            <Setter Property="BorderBrush"     Value="#E4DAF5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius"    Value="12" />
            <Setter Property="Padding"         Value="20" />
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="30" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2D1554" />
        </Style>

        <Style x:Key="KpiLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize"         Value="11" />
            <Setter Property="FontWeight"       Value="SemiBold" />
            <Setter Property="Foreground"       Value="#9B80C4" />
            <Setter Property="CharacterSpacing" Value="50" />
        </Style>

        <Style x:Key="KpiSubStyle" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="12" />
            <Setter Property="Foreground" Value="#B0A0CC" />
            <Setter Property="Margin"     Value="0,3,0,0" />
        </Style>

        <Style x:Key="ColHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="10" />
            <Setter Property="FontWeight"        Value="SemiBold" />
            <Setter Property="Foreground"        Value="#9B80C4" />
            <Setter Property="CharacterSpacing"  Value="50" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="13" />
            <Setter Property="Foreground"        Value="#2D1554" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming"      Value="CharacterEllipsis" />
        </Style>

        <Style x:Key="CellSecondaryStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="12" />
            <Setter Property="Foreground"        Value="#9B80C4" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming"      Value="CharacterEllipsis" />
        </Style>

        <!-- Visible ComboBox style -->
        <Style x:Key="ToolbarComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background"             Value="White" />
            <Setter Property="Foreground"             Value="#2D1554" />
            <Setter Property="BorderBrush"            Value="#C4A8E8" />
            <Setter Property="BorderThickness"        Value="1.5" />
            <Setter Property="CornerRadius"           Value="8" />
            <Setter Property="HorizontalAlignment"    Value="Stretch" />
            <Setter Property="VerticalAlignment"      Value="Center" />
            <Setter Property="Padding"                Value="12,8" />
            <Setter Property="FontSize"               Value="13" />
        </Style>

    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Padding="28,24,28,32" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ROW 0 · Page Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="2">
                    <TextBlock
                        Text="Patient Management"
                        FontSize="26" FontWeight="Bold"
                        Foreground="#2D1554" />
                    <TextBlock
                        Text="View and manage all registered clinic patients"
                        FontSize="13" Foreground="#9B80C4" />
                </StackPanel>

                <Button
                    Grid.Column="1"
                    x:Name="AddPatientButton"
                    VerticalAlignment="Center"
                    Click="AddPatientButton_Click"
                    Padding="16,10"
                    Background="#5B2D8E"
                    CornerRadius="8"
                    BorderThickness="0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="13" Foreground="White" />
                        <TextBlock Text="Add Patient" Foreground="White" FontWeight="SemiBold" FontSize="13" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- ROW 1 · KPI Cards -->
            <Grid Grid.Row="1" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Total -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="0">
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#EDE4F9">
                                <FontIcon Glyph="&#xE716;" FontSize="16" Foreground="#5B2D8E" />
                            </Border>
                            <TextBlock Text="TOTAL PATIENTS" Style="{StaticResource KpiLabelStyle}" VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock x:Name="TxtTotalPatients" Text="0" Style="{StaticResource KpiValueStyle}" />
                        <TextBlock Text="All registered patients" Style="{StaticResource KpiSubStyle}" />
                    </StackPanel>
                </Border>

                <!-- Male -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="0">
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#E3F2FD">
                                <FontIcon Glyph="&#xE77B;" FontSize="16" Foreground="#0078D4" />
                            </Border>
                            <TextBlock Text="MALE" Style="{StaticResource KpiLabelStyle}" VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock x:Name="TxtMalePatients" Text="0" Style="{StaticResource KpiValueStyle}" />
                        <TextBlock Text="Male patients" Style="{StaticResource KpiSubStyle}" />
                    </StackPanel>
                </Border>

                <!-- Female -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="0">
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#FCE4EC">
                                <FontIcon Glyph="&#xE77B;" FontSize="16" Foreground="#C2185B" />
                            </Border>
                            <TextBlock Text="FEMALE" Style="{StaticResource KpiLabelStyle}" VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock x:Name="TxtFemalePatients" Text="0" Style="{StaticResource KpiValueStyle}" />
                        <TextBlock Text="Female patients" Style="{StaticResource KpiSubStyle}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ROW 2 · Search + Filter + Sort Toolbar -->
            <Border
    Grid.Row="2"
    Background="White"
    BorderBrush="#E4DAF5"
    BorderThickness="1"
    CornerRadius="12"
    Padding="16,12">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Search -->
                    <TextBox
            Grid.Column="0"
            x:Name="SearchBox"
            PlaceholderText="Search patients…"
            VerticalAlignment="Center"
            Background="White"
            Foreground="#2D1554"
            PlaceholderForeground="#9B80C4"
            BorderBrush="#C4A8E8"
            BorderThickness="1.5"
            CornerRadius="8"
            Padding="12,8"
            FontSize="13"
            TextChanged="SearchBox_TextChanged">
                        <TextBox.Resources>
                            <SolidColorBrush x:Key="TextBoxFocusedBorderBrush"       Color="#5B2D8E" />
                            <SolidColorBrush x:Key="TextBoxPointerOverBorderBrush"   Color="#9B80C4" />
                            <SolidColorBrush x:Key="TextBoxButtonForegroundThemeBrush" Color="#9B80C4" />
                        </TextBox.Resources>
                    </TextBox>

                    <!-- Gender Filter -->
                    <ComboBox
            Grid.Column="1"
            x:Name="GenderFilter"
            Style="{StaticResource ToolbarComboBoxStyle}"
            SelectionChanged="GenderFilter_SelectionChanged">
                        <ComboBox.Resources>
                            <SolidColorBrush x:Key="ComboBoxFocusedBorderBrush"     Color="#5B2D8E" />
                            <SolidColorBrush x:Key="ComboBoxPointerOverBorderBrush" Color="#9B80C4" />
                        </ComboBox.Resources>
                        <ComboBoxItem Content="All Genders" Tag="All" IsSelected="True" />
                        <ComboBoxItem Content="Male"        Tag="Male" />
                        <ComboBoxItem Content="Female"      Tag="Female" />
                        <ComboBoxItem Content="Other"       Tag="Other" />
                    </ComboBox>

                    <!-- Sort -->
                    <ComboBox
            Grid.Column="2"
            x:Name="SortOrder"
            Style="{StaticResource ToolbarComboBoxStyle}"
            SelectionChanged="SortOrder_SelectionChanged">
                        <ComboBox.Resources>
                            <SolidColorBrush x:Key="ComboBoxFocusedBorderBrush"     Color="#5B2D8E" />
                            <SolidColorBrush x:Key="ComboBoxPointerOverBorderBrush" Color="#9B80C4" />
                        </ComboBox.Resources>
                        <ComboBoxItem Content="Name: A → Z" Tag="AZ" IsSelected="True" />
                        <ComboBoxItem Content="Name: Z → A" Tag="ZA" />
                    </ComboBox>

                    <!-- Spacer -->
                    <Grid Grid.Column="3" />

                </Grid>
            </Border>

            <!-- ROW 3 · Patients Table -->
            <Border
                Grid.Row="3"
                Background="White"
                BorderBrush="#E4DAF5"
                BorderThickness="1"
                CornerRadius="12"
                Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Grid Grid.Row="0" Padding="20,16,20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Spacing="2">
                            <TextBlock Text="Patient Records" FontSize="15" FontWeight="SemiBold" Foreground="#2D1554" />
                            <TextBlock Text="All registered clinic patients" FontSize="12" Foreground="#9B80C4" />
                        </StackPanel>
                        <Border Grid.Column="1" Background="#EDE4F9" CornerRadius="6" Padding="10,4" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtRowCount" Text="Showing 0 patients" FontSize="12" Foreground="#5B2D8E" FontWeight="SemiBold" />
                        </Border>
                    </Grid>

                    <!-- Column Headers -->
                    <Grid Grid.Row="1">
                        <Border Background="#F7F4FD" Padding="20,9">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="110" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="NAME"     Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="1" Text="EMAIL"    Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="2" Text="PHONE"    Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="3" Text="GENDER"   Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="4" Text="BIRTHDAY" Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="5" Text="ACTIONS"  Style="{StaticResource ColHeaderStyle}" HorizontalAlignment="Center" />
                            </Grid>
                        </Border>
                        <Border Height="1" Background="#E4DAF5" VerticalAlignment="Bottom" />
                    </Grid>

                    <!-- Data Rows -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="480">
                        <ItemsControl x:Name="PatientListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:PatientItem">
                                    <StackPanel>
                                        <Border Padding="20,0">
                                            <Grid MinHeight="60">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="150" />
                                                    <ColumnDefinition Width="100" />
                                                    <ColumnDefinition Width="110" />
                                                    <ColumnDefinition Width="80" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Name + Avatar -->
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                                    <Border
                                                        Width="36" Height="36" CornerRadius="18"
                                                        Background="{Binding AvatarColor, Converter={StaticResource StringToBrush}}">
                                                        <TextBlock
                                                            Text="{x:Bind Initials}"
                                                            FontSize="13" FontWeight="SemiBold" Foreground="White"
                                                            HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                    <TextBlock
                                                        Text="{x:Bind FullName}"
                                                        Style="{StaticResource CellTextStyle}"
                                                        FontWeight="SemiBold" />
                                                </StackPanel>

                                                <!-- Email -->
                                                <TextBlock Grid.Column="1" Text="{x:Bind Email}" Style="{StaticResource CellSecondaryStyle}" />

                                                <!-- Phone -->
                                                <TextBlock Grid.Column="2" Text="{x:Bind Phone}" Style="{StaticResource CellSecondaryStyle}" />

                                                <!-- Gender -->
                                                <TextBlock
                                                    Grid.Column="3"
                                                    Text="{x:Bind Gender}"
                                                    FontSize="11" FontWeight="SemiBold"
                                                    Foreground="{Binding GenderBadgeText, Converter={StaticResource StringToBrush}}"
                                                    VerticalAlignment="Center" />

                                                <!-- Birthday -->
                                                <TextBlock Grid.Column="4" Text="{x:Bind Birthday}" Style="{StaticResource CellSecondaryStyle}" />

                                                <!-- Actions · Kebab Menu -->
                                                <Button
                                                    Grid.Column="5"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                                    Padding="8,5"
                                                    Background="Transparent"
                                                    CornerRadius="6"
                                                    BorderThickness="0"
                                                    ToolTipService.ToolTip="More options">
                                                    <Button.Flyout>
                                                        <MenuFlyout Placement="Bottom">
                                                            <MenuFlyoutItem
                                                                Text="Edit"
                                                                Tag="{x:Bind PatientId}"
                                                                Click="EditPatient_Click">
                                                                <MenuFlyoutItem.Icon>
                                                                    <FontIcon Glyph="&#xE70F;" FontSize="13" />
                                                                </MenuFlyoutItem.Icon>
                                                            </MenuFlyoutItem>
                                                            <MenuFlyoutSeparator />
                                                            <MenuFlyoutItem
                                                                Text="Delete"
                                                                Tag="{x:Bind PatientId}"
                                                                Click="DeletePatient_Click"
                                                                Foreground="#C0392B">
                                                                <MenuFlyoutItem.Icon>
                                                                    <FontIcon Glyph="&#xE74D;" FontSize="13" Foreground="#C0392B" />
                                                                </MenuFlyoutItem.Icon>
                                                            </MenuFlyoutItem>
                                                        </MenuFlyout>
                                                    </Button.Flyout>
                                                    <FontIcon Glyph="&#xE712;" FontSize="16" Foreground="#5B2D8E" />
                                                </Button>

                                            </Grid>
                                        </Border>
                                        <Border Height="1" Background="#F0EAF8" Margin="20,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>
</Page>