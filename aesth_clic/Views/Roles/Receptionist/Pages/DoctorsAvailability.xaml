<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="aesth_clic.Views.Roles.Receptionist.Pages.DoctorsAvailability"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:aesth_clic.Views.Roles.Receptionist.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F7F4FD">

    <Page.Resources>

        <Style x:Key="ColHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="10" />
            <Setter Property="FontWeight"        Value="SemiBold" />
            <Setter Property="Foreground"        Value="#9B80C4" />
            <Setter Property="CharacterSpacing"  Value="50" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="13" />
            <Setter Property="Foreground"        Value="#2D1554" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming"      Value="CharacterEllipsis" />
        </Style>

    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Padding="28,24,28,32" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ROW 0 · Page Header -->
            <StackPanel Grid.Row="0" Spacing="2">
                <TextBlock
                    Text="Doctors Availability"
                    FontSize="26" FontWeight="Bold"
                    Foreground="#2D1554" />
                <TextBlock
                    Text="View current availability status of all doctors"
                    FontSize="13" Foreground="#9B80C4" />
            </StackPanel>

            <!-- ROW 1 · Search + Filter Toolbar -->
            <Border
                Grid.Row="1"
                Background="White"
                BorderBrush="#E4DAF5"
                BorderThickness="1"
                CornerRadius="12"
                Padding="16,12">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <AutoSuggestBox
                        Grid.Column="0"
                        x:Name="SearchBox"
                        PlaceholderText="Search doctor name…"
                        QueryIcon="Find"
                        VerticalAlignment="Center"
                        BorderBrush="#E4DAF5"
                        BorderThickness="1"
                        CornerRadius="8"
                        TextChanged="SearchBox_TextChanged" />

                    <!-- Status Filter Dropdown -->
                    <ComboBox
                        Grid.Column="1"
                        x:Name="StatusFilter"
                        SelectedIndex="0"
                        MinWidth="140"
                        VerticalAlignment="Center"
                        BorderBrush="#E4DAF5"
                        BorderThickness="1"
                        CornerRadius="8"
                        FontSize="13"
                        Foreground="#2D1554"
                        SelectionChanged="StatusFilter_SelectionChanged">
                        <ComboBoxItem Content="All Statuses" />
                        <ComboBoxItem Content="Available" />
                        <ComboBoxItem Content="Busy" />
                    </ComboBox>
                </Grid>
            </Border>

            <!-- ROW 2 · Doctors Table -->
            <Border
                Grid.Row="2"
                Background="White"
                BorderBrush="#E4DAF5"
                BorderThickness="1"
                CornerRadius="12"
                Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Grid Grid.Row="0" Padding="20,16,20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Spacing="2">
                            <TextBlock Text="Doctor Records" FontSize="15" FontWeight="SemiBold" Foreground="#2D1554" />
                            <TextBlock Text="Read-only view of doctor availability" FontSize="12" Foreground="#9B80C4" />
                        </StackPanel>
                        <Border Grid.Column="1" Background="#EDE4F9" CornerRadius="6" Padding="10,4" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtRowCount" Text="Showing 0 doctors" FontSize="12" Foreground="#5B2D8E" FontWeight="SemiBold" />
                        </Border>
                    </Grid>

                    <!-- Column Headers -->
                    <Grid Grid.Row="1">
                        <Border Background="#F7F4FD" Padding="20,9">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="160" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="DOCTOR NAME"  Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="1" Text="STATUS"       Style="{StaticResource ColHeaderStyle}" />
                            </Grid>
                        </Border>
                        <Border Height="1" Background="#E4DAF5" VerticalAlignment="Bottom" />
                    </Grid>

                    <!-- Data Rows -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="520">
                        <ItemsControl x:Name="DoctorListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:DoctorAvailabilityItem">
                                    <StackPanel>
                                        <Border Padding="20,0">
                                            <Grid MinHeight="60">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="160" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Doctor Name -->
                                                <TextBlock
                                                    Grid.Column="0"
                                                    Text="{x:Bind DoctorName}"
                                                    Style="{StaticResource CellTextStyle}"
                                                    FontWeight="SemiBold" />

                                                <!-- Status (dot + text, no background) -->
                                                <StackPanel
                                                    Grid.Column="1"
                                                    Orientation="Horizontal" Spacing="6"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center">
                                                    <Ellipse
                                                        Width="7" Height="7"
                                                        VerticalAlignment="Center">
                                                        <Ellipse.Fill>
                                                            <SolidColorBrush Color="{x:Bind StatusDotColor}" />
                                                        </Ellipse.Fill>
                                                    </Ellipse>
                                                    <TextBlock
                                                        Text="{x:Bind Status}"
                                                        FontSize="13" FontWeight="SemiBold"
                                                        Foreground="{x:Bind StatusForeground}"
                                                        VerticalAlignment="Center" />
                                                </StackPanel>

                                            </Grid>
                                        </Border>
                                        <Border Height="1" Background="#F0EAF8" Margin="20,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>
</Page>
