<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="aesth_clic.Views.Roles.Doctor.Pages.PatientProcedures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:aesth_clic.Views.Roles.Doctor.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F7F4FD">

    <Page.Resources>

        <local:StringToBrushConverter x:Key="StringToBrush" />

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background"      Value="White" />
            <Setter Property="BorderBrush"     Value="#E4DAF5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius"    Value="12" />
            <Setter Property="Padding"         Value="20" />
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="30" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2D1554" />
        </Style>

        <Style x:Key="KpiLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize"         Value="11" />
            <Setter Property="FontWeight"       Value="SemiBold" />
            <Setter Property="Foreground"       Value="#9B80C4" />
            <Setter Property="CharacterSpacing" Value="50" />
        </Style>

        <Style x:Key="KpiSubStyle" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="12" />
            <Setter Property="Foreground" Value="#B0A0CC" />
            <Setter Property="Margin"     Value="0,3,0,0" />
        </Style>

        <Style x:Key="ColHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="10" />
            <Setter Property="FontWeight"        Value="SemiBold" />
            <Setter Property="Foreground"        Value="#9B80C4" />
            <Setter Property="CharacterSpacing"  Value="50" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="13" />
            <Setter Property="Foreground"        Value="#2D1554" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming"      Value="CharacterEllipsis" />
        </Style>

        <Style x:Key="CellSecondaryStyle" TargetType="TextBlock">
            <Setter Property="FontSize"          Value="12" />
            <Setter Property="Foreground"        Value="#9B80C4" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextTrimming"      Value="CharacterEllipsis" />
        </Style>

    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Padding="28,24,28,32" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ROW 0 · Page Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="2">
                    <TextBlock
                        Text="Patient Procedures"
                        FontSize="26" FontWeight="Bold"
                        Foreground="#2D1554" />
                    <TextBlock
                        Text="View and manage patient procedures and schedule appointments"
                        FontSize="13" Foreground="#9B80C4" />
                </StackPanel>

                <Button
                    Grid.Column="1"
                    x:Name="AddProcedureButton"
                    VerticalAlignment="Center"
                    Click="AddProcedureButton_Click"
                    Padding="16,10"
                    Background="#5B2D8E"
                    CornerRadius="8"
                    BorderThickness="0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE710;" FontSize="13" Foreground="White" />
                        <TextBlock Text="Add Procedure" Foreground="White" FontWeight="SemiBold" FontSize="13" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- ROW 1 · KPI Cards -->
            <Grid Grid.Row="1" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Total -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="0">
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#EDE4F9">
                                <FontIcon Glyph="&#xE9D9;" FontSize="16" Foreground="#5B2D8E" />
                            </Border>
                            <TextBlock Text="TOTAL PROCEDURES" Style="{StaticResource KpiLabelStyle}" VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock x:Name="TxtTotalProcedures" Text="0" Style="{StaticResource KpiValueStyle}" />
                        <TextBlock Text="All patient procedures" Style="{StaticResource KpiSubStyle}" />
                    </StackPanel>
                </Border>

                <!-- Pending -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="0">
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#FFF8E1">
                                <FontIcon Glyph="&#xE823;" FontSize="16" Foreground="#F59E0B" />
                            </Border>
                            <TextBlock Text="PENDING" Style="{StaticResource KpiLabelStyle}" VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock x:Name="TxtPendingProcedures" Text="0" Style="{StaticResource KpiValueStyle}" />
                        <TextBlock Text="Awaiting appointment" Style="{StaticResource KpiSubStyle}" />
                    </StackPanel>
                </Border>

                <!-- Scheduled -->
                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="0">
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#E3F2FD">
                                <FontIcon Glyph="&#xE787;" FontSize="16" Foreground="#0078D4" />
                            </Border>
                            <TextBlock Text="SCHEDULED" Style="{StaticResource KpiLabelStyle}" VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock x:Name="TxtScheduledProcedures" Text="0" Style="{StaticResource KpiValueStyle}" />
                        <TextBlock Text="Appointment set" Style="{StaticResource KpiSubStyle}" />
                    </StackPanel>
                </Border>

                <!-- Completed -->
                <Border Grid.Column="3" Style="{StaticResource CardStyle}">
                    <StackPanel Spacing="0">
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,12">
                            <Border Width="36" Height="36" CornerRadius="8" Background="#E8F5E9">
                                <FontIcon Glyph="&#xE930;" FontSize="16" Foreground="#2E7D32" />
                            </Border>
                            <TextBlock Text="COMPLETED" Style="{StaticResource KpiLabelStyle}" VerticalAlignment="Center" />
                        </StackPanel>
                        <TextBlock x:Name="TxtCompletedProcedures" Text="0" Style="{StaticResource KpiValueStyle}" />
                        <TextBlock Text="Procedures done" Style="{StaticResource KpiSubStyle}" />
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ROW 2 · Search + Filter Toolbar -->
            <Border
                Grid.Row="2"
                Background="White"
                BorderBrush="#E4DAF5"
                BorderThickness="1"
                CornerRadius="12"
                Padding="16,12">
                <Grid ColumnSpacing="12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="180" />
                    </Grid.ColumnDefinitions>

                    <AutoSuggestBox
                        Grid.Column="0"
                        x:Name="SearchBox"
                        PlaceholderText="Search patient name or procedure…"
                        QueryIcon="Find"
                        VerticalAlignment="Center"
                        BorderBrush="#E4DAF5"
                        BorderThickness="1"
                        CornerRadius="8"
                        TextChanged="SearchBox_TextChanged" />

                    <ComboBox
                        Grid.Column="1"
                        x:Name="StatusFilter"
                        PlaceholderText="All Statuses"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        BorderBrush="#E4DAF5"
                        CornerRadius="8"
                        SelectionChanged="StatusFilter_SelectionChanged">
                        <ComboBoxItem Content="All Statuses" Tag="All"       IsSelected="True" />
                        <ComboBoxItem Content="Pending"      Tag="Pending" />
                        <ComboBoxItem Content="Scheduled"    Tag="Scheduled" />
                        <ComboBoxItem Content="Completed"    Tag="Completed" />
                        <ComboBoxItem Content="Cancelled"    Tag="Cancelled" />
                    </ComboBox>
                </Grid>
            </Border>

            <!-- ROW 3 · Procedures Table -->
            <Border
                Grid.Row="3"
                Background="White"
                BorderBrush="#E4DAF5"
                BorderThickness="1"
                CornerRadius="12"
                Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Grid Grid.Row="0" Padding="20,16,20,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Spacing="2">
                            <TextBlock Text="Procedure Records" FontSize="15" FontWeight="SemiBold" Foreground="#2D1554" />
                            <TextBlock Text="All patient procedures across the clinic" FontSize="12" Foreground="#9B80C4" />
                        </StackPanel>
                        <Border Grid.Column="1" Background="#EDE4F9" CornerRadius="6" Padding="10,4" VerticalAlignment="Center">
                            <TextBlock x:Name="TxtRowCount" Text="Showing 0 procedures" FontSize="12" Foreground="#5B2D8E" FontWeight="SemiBold" />
                        </Border>
                    </Grid>

                    <!-- Column Headers -->
                    <Grid Grid.Row="1">
                        <Border Background="#F7F4FD" Padding="20,9">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="160" />
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="180" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="PATIENT"        Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="1" Text="PROCEDURE"      Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="2" Text="STATUS"         Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="3" Text="DATE SCHEDULED" Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="4" Text="COST"           Style="{StaticResource ColHeaderStyle}" />
                                <TextBlock Grid.Column="5" Text="ACTIONS"        Style="{StaticResource ColHeaderStyle}" HorizontalAlignment="Center" />
                            </Grid>
                        </Border>
                        <Border Height="1" Background="#E4DAF5" VerticalAlignment="Bottom" />
                    </Grid>

                    <!-- Data Rows -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" MaxHeight="480">
                        <ItemsControl x:Name="ProcedureListControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:PatientProcedureItem">
                                    <StackPanel>
                                        <Border Padding="20,0">
                                            <Grid MinHeight="60">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="200" />
                                                    <ColumnDefinition Width="120" />
                                                    <ColumnDefinition Width="160" />
                                                    <ColumnDefinition Width="100" />
                                                    <ColumnDefinition Width="180" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Patient Name + Avatar -->
                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                                    <Border
                                                        Width="36" Height="36" CornerRadius="18"
                                                        Background="{Binding AvatarColor, Converter={StaticResource StringToBrush}}">
                                                        <TextBlock
                                                            Text="{x:Bind Initials}"
                                                            FontSize="13" FontWeight="SemiBold" Foreground="White"
                                                            HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                    <TextBlock
                                                        Text="{x:Bind PatientName}"
                                                        Style="{StaticResource CellTextStyle}"
                                                        FontWeight="SemiBold" />
                                                </StackPanel>

                                                <!-- Procedure Name -->
                                                <TextBlock Grid.Column="1" Text="{x:Bind ProcedureName}" Style="{StaticResource CellTextStyle}" />

                                                <!-- Status Badge -->
                                                <Border
                                                    Grid.Column="2"
                                                    Background="{Binding StatusBadgeColor, Converter={StaticResource StringToBrush}}"
                                                    CornerRadius="6" Padding="8,4"
                                                    HorizontalAlignment="Left" VerticalAlignment="Center">
                                                    <TextBlock
                                                        Text="{x:Bind Status}"
                                                        FontSize="11" FontWeight="SemiBold"
                                                        Foreground="{Binding StatusBadgeText, Converter={StaticResource StringToBrush}}" />
                                                </Border>

                                                <!-- Date Scheduled -->
                                                <StackPanel Grid.Column="3" VerticalAlignment="Center" Spacing="2">
                                                    <TextBlock
                                                        Text="{x:Bind DateScheduled}"
                                                        Style="{StaticResource CellSecondaryStyle}"
                                                        Visibility="{x:Bind HasDate}" />
                                                    <Border
                                                        Background="#F7F4FD" CornerRadius="4" Padding="6,3"
                                                        HorizontalAlignment="Left"
                                                        Visibility="{x:Bind NoDate}">
                                                        <TextBlock
                                                            Text="Not scheduled"
                                                            FontSize="11" Foreground="#B0A0CC"
                                                            FontStyle="Italic" />
                                                    </Border>
                                                </StackPanel>

                                                <!-- Cost -->
                                                <TextBlock Grid.Column="4" Text="{x:Bind Cost}" Style="{StaticResource CellTextStyle}" FontWeight="SemiBold" />

                                                <!-- Actions -->
                                                <StackPanel
                                                    Grid.Column="5"
                                                    Orientation="Horizontal" Spacing="6"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center">

                                                    <Button
                                                        Tag="{x:Bind ProcedureRecordId}"
                                                        Click="ScheduleAppointment_Click"
                                                        Padding="8,5" Background="#EDE4F9"
                                                        CornerRadius="6" BorderThickness="0"
                                                        ToolTipService.ToolTip="Schedule appointment">
                                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                                            <FontIcon Glyph="&#xE787;" FontSize="11" Foreground="#5B2D8E" />
                                                            <TextBlock Text="Schedule" FontSize="12" Foreground="#5B2D8E" FontWeight="SemiBold" />
                                                        </StackPanel>
                                                    </Button>

                                                    <Button
                                                        Tag="{x:Bind ProcedureRecordId}"
                                                        Click="ViewProcedure_Click"
                                                        Padding="8,5" Background="#F0FAF0"
                                                        CornerRadius="6" BorderThickness="0"
                                                        ToolTipService.ToolTip="View procedure details">
                                                        <StackPanel Orientation="Horizontal" Spacing="5">
                                                            <FontIcon Glyph="&#xE7B3;" FontSize="11" Foreground="#2E7D32" />
                                                            <TextBlock Text="View" FontSize="12" Foreground="#2E7D32" FontWeight="SemiBold" />
                                                        </StackPanel>
                                                    </Button>

                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <Border Height="1" Background="#F0EAF8" Margin="20,0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                </Grid>
            </Border>

        </Grid>
    </ScrollViewer>
</Page>