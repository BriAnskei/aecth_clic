<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="aesth_clic.Views.Roles.AdminClientShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:aesth_clic.Views.Roles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <NavigationView
            x:Name="NavView"
            IsSettingsVisible="False"
            SelectionChanged="NavView_SelectionChanged"
            Loaded="NavView_Loaded"
            PaneDisplayMode="Left"
            IsPaneToggleButtonVisible="True"
            OpenPaneLength="240"
            CompactPaneLength="52">

            <NavigationView.Resources>
                <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground"             Color="#5B2D8E" />
                <SolidColorBrush x:Key="NavigationViewTopPaneBackground"                 Color="#5B2D8E" />
                <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground"            Color="#5B2D8E" />
                <SolidColorBrush x:Key="NavigationViewSelectionIndicatorForeground"      Color="White" />
                <SolidColorBrush x:Key="NavigationViewItemForeground"                    Color="#E8D5FF" />
                <SolidColorBrush x:Key="NavigationViewItemForegroundSelected"            Color="White" />
                <SolidColorBrush x:Key="NavigationViewItemForegroundPointerOver"         Color="White" />
                <SolidColorBrush x:Key="NavigationViewItemBackgroundSelected"            Color="#7C3FBD" />
                <SolidColorBrush x:Key="NavigationViewItemBackgroundPointerOver"         Color="#6B2FA0" />
                <SolidColorBrush x:Key="NavigationViewItemBackgroundSelectedPointerOver" Color="#7C3FBD" />
            </NavigationView.Resources>

            <NavigationView.PaneHeader>
                <StackPanel Padding="16,24,16,12" Spacing="0">
                    <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                        <Border Width="44" Height="44" CornerRadius="22" Background="White">
                            <TextBlock
                                Text="A"
                                FontSize="22"
                                FontWeight="Bold"
                                Foreground="#5B2D8E"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <StackPanel VerticalAlignment="Center" Spacing="1">
                            <TextBlock Text="Aesthetic" FontSize="15" FontWeight="Bold" Foreground="White" />
                            <TextBlock Text="Clinic"    FontSize="11" Foreground="#C9A8E8" />
                        </StackPanel>
                    </StackPanel>
                    <Border Height="1" Background="#7C4FAA" Margin="0,16,0,8" />
                    <TextBlock
                        Text="ADMIN PORTAL"
                        FontSize="9"
                        FontWeight="SemiBold"
                        Foreground="#A07CC8"
                        CharacterSpacing="100"
                        Margin="4,0,0,0" />
                </StackPanel>
            </NavigationView.PaneHeader>

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Tag="Dashboard">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE80F;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Users Management" Tag="UsersManagement">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE716;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Terms and Conditions" Tag="TermsAndConditions">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE736;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem
                    Content="Logout"
                    Tag="Logout"
                    SelectsOnInvoked="False"
                    Tapped="OnLogout">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xF3B1;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>

            <Frame x:Name="ContentFrame" Background="#F7F4FD" />

        </NavigationView>
    </Grid>
</Page>