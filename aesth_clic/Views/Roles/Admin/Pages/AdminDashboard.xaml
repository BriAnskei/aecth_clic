                />
                <TextBlock Grid.Column="1" Text="Jose Reyes" Style="{StaticResource CellStyle}" />
                <TextBlock
                  Grid.Column="2"
                  Text="Botox Injection"
                  Style="{StaticResource CellStyle}"
                />
                <Border
                  Grid.Column="3"
                  Background="#E6F9F2"
                  CornerRadius="6"
                  Padding="8,4"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                >
                  <TextBlock Text="Done" FontSize="11" Foreground="#0B7A56" FontWeight="SemiBold" />
                </Border>
              </Grid>
            </Border>
            <Border Height="1" Background="#F0EAF8" Margin="14,0" />

            <Border Padding="14,11">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="110" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="180" />
                  <ColumnDefinition Width="110" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  Text="11:00 AM"
                  Style="{StaticResource CellStyle}"
                  Foreground="#7C5BA8"
                />
                <TextBlock
                  Grid.Column="1"
                  Text="Ana dela Cruz"
                  Style="{StaticResource CellStyle}"
                />
                <TextBlock
                  Grid.Column="2"
                  Text="Dermal Filler"
                  Style="{StaticResource CellStyle}"
                />
                <Border
                  Grid.Column="3"
                  Background="#FFF8E6"
                  CornerRadius="6"
                  Padding="8,4"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                >
                  <TextBlock
                    Text="Ongoing"
                    FontSize="11"
                    Foreground="#A06800"
                    FontWeight="SemiBold"
                  />
                </Border>
              </Grid>
            </Border>
            <Border Height="1" Background="#F0EAF8" Margin="14,0" />

            <Border Padding="14,11">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="110" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="180" />
                  <ColumnDefinition Width="110" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  Text="1:00 PM"
                  Style="{StaticResource CellStyle}"
                  Foreground="#7C5BA8"
                />
                <TextBlock
                  Grid.Column="1"
                  Text="Carlos Mendoza"
                  Style="{StaticResource CellStyle}"
                />
                <TextBlock
                  Grid.Column="2"
                  Text="Laser Hair Removal"
                  Style="{StaticResource CellStyle}"
                />
                <Border
                  Grid.Column="3"
                  Background="#EAF2FF"
                  CornerRadius="6"
                  Padding="8,4"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                >
                  <TextBlock
                    Text="Upcoming"
                    FontSize="11"
                    Foreground="#0055A8"
                    FontWeight="SemiBold"
                  />
                </Border>
              </Grid>
            </Border>
            <Border Height="1" Background="#F0EAF8" Margin="14,0" />

            <Border Padding="14,11">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="110" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="180" />
                  <ColumnDefinition Width="110" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  Text="3:30 PM"
                  Style="{StaticResource CellStyle}"
                  Foreground="#7C5BA8"
                />
                <TextBlock
                  Grid.Column="1"
                  Text="Liza Gonzales"
                  Style="{StaticResource CellStyle}"
                />
                <TextBlock
                  Grid.Column="2"
                  Text="Chemical Peel"
                  Style="{StaticResource CellStyle}"
                />
                <Border
                  Grid.Column="3"
                  Background="#EAF2FF"
                  CornerRadius="6"
                  Padding="8,4"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                >
                  <TextBlock
                    Text="Upcoming"
                    FontSize="11"
                    Foreground="#0055A8"
                    FontWeight="SemiBold"
                  />
                </Border>
              </Grid>
            </Border>
          </StackPanel>
        </StackPanel>
      </Border>

      <!-- ══════════════════════════════
                 BOTTOM: Procedures + Low Stock
            ══════════════════════════════ -->
      <Grid Grid.Row="3" ColumnSpacing="16">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Procedure Statistics -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
          <StackPanel Spacing="16">
            <StackPanel Spacing="2">
              <TextBlock Text="Procedure Statistics" Style="{StaticResource CardTitleStyle}" />
              <TextBlock Text="Most common this month" Style="{StaticResource CardSubtitleStyle}" />
            </StackPanel>

            <StackPanel Spacing="14">
              <StackPanel Spacing="6">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <TextBlock
                    Grid.Column="0"
                    Text="Facial Rejuvenation"
                    FontSize="13"
                    Foreground="#2D1554"
                  />
                  <TextBlock
                    Grid.Column="1"
                    Text="47"
                    FontSize="13"
                    Foreground="#5B2D8E"
                    FontWeight="SemiBold"
                  />
                </Grid>
                <ProgressBar
