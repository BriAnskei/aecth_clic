          <!-- Column Headers -->
          <Border Background="#F7F4FD" CornerRadius="8" Padding="14,9">
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="110" />
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Column="0" Text="TIME" Style="{StaticResource ColHeaderStyle}" />
              <TextBlock Grid.Column="1" Text="PATIENT" Style="{StaticResource ColHeaderStyle}" />
              <TextBlock Grid.Column="2" Text="PROCEDURE" Style="{StaticResource ColHeaderStyle}" />
              <TextBlock Grid.Column="3" Text="STATUS" Style="{StaticResource ColHeaderStyle}" />
            </Grid>
          </Border>

          <!-- Rows -->
          <StackPanel Spacing="0">
            <Border Padding="14,11">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="110" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="180" />
                  <ColumnDefinition Width="110" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  Text="8:00 AM"
                  Style="{StaticResource CellStyle}"
                  Foreground="#7C5BA8"
                />
                <TextBlock Grid.Column="1" Text="Maria Santos" Style="{StaticResource CellStyle}" />
                <TextBlock
                  Grid.Column="2"
                  Text="Facial Rejuvenation"
                  Style="{StaticResource CellStyle}"
                />
                <Border
                  Grid.Column="3"
                  Background="#E6F9F2"
                  CornerRadius="6"
                  Padding="8,4"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                >
