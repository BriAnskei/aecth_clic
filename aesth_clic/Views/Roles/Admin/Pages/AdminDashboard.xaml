                  Maximum="100"
                  Foreground="#9B5FD4"
                  Background="#EDE4F9"
                  CornerRadius="3"
                  Height="7"
                />
              </StackPanel>

              <StackPanel Spacing="6">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <TextBlock
                    Grid.Column="0"
                    Text="Dermal Filler"
                    FontSize="13"
                    Foreground="#2D1554"
                  />
                  <TextBlock
                    Grid.Column="1"
                    Text="21"
                    FontSize="13"
                    Foreground="#5B2D8E"
                    FontWeight="SemiBold"
                  />
                </Grid>
                <ProgressBar
                  Value="42"
                  Maximum="100"
                  Foreground="#B87FE8"
                  Background="#EDE4F9"
                  CornerRadius="3"
                  Height="7"
                />
              </StackPanel>

              <StackPanel Spacing="6">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <TextBlock
                    Grid.Column="0"
                    Text="Chemical Peel"
                    FontSize="13"
                    Foreground="#2D1554"
                  />
                  <TextBlock
                    Grid.Column="1"
                    Text="14"
                    FontSize="13"
                    Foreground="#5B2D8E"
                    FontWeight="SemiBold"
                  />
                </Grid>
                <ProgressBar
                  Value="28"
                  Maximum="100"
                  Foreground="#CEA8F5"
                  Background="#EDE4F9"
                  CornerRadius="3"
                  Height="7"
                />
              </StackPanel>
            </StackPanel>
          </StackPanel>
        </Border>

        <!-- Low Stock Alert -->
        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
          <StackPanel Spacing="16">
            <StackPanel Spacing="2">
              <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Low Stock Alert" Style="{StaticResource CardTitleStyle}" />
                <Border
                  Background="#FDECEA"
                  CornerRadius="5"
                  Padding="7,2"
                  VerticalAlignment="Center"
                >
                  <TextBlock
                    Text="5 items"
                    FontSize="11"
                    Foreground="#C0392B"
                    FontWeight="SemiBold"
                  />
                </Border>
              </StackPanel>
              <TextBlock
                Text="Medicines below reorder threshold"
                Style="{StaticResource CardSubtitleStyle}"
              />
            </StackPanel>

            <!-- Column headers -->
            <Border Background="#FEF5F4" CornerRadius="8" Padding="14,8">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="65" />
                  <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <TextBlock
                  Grid.Column="0"
                  Text="MEDICINE"
                  Style="{StaticResource ColHeaderStyle}"
