                />
              </StackPanel>

              <StackPanel Spacing="6">
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                  </Grid.ColumnDefinitions>
                  <TextBlock
                    Grid.Column="0"
                    Text="Laser Hair Removal"
                    FontSize="13"
