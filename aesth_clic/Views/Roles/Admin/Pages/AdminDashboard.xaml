              </Grid>
            </Border>
            <Border Height="1" Background="#F0EAF8" Margin="14,0" />

            <Border Padding="14,11">
              <Grid>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="110" />
                  <ColumnDefinition Width="*" />
                  <ColumnDefinition Width="180" />
                  <ColumnDefinition Width="110" />
