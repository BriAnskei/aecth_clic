<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="aesth_clic.Views.Roles.SuperAdmin.Pages.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:aesth_clic.Views.Roles.SuperAdmin.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="KpiCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="20" />
        </Style>

        <Style x:Key="ChartCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="20" />
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            <Setter Property="CharacterSpacing" Value="50" />
        </Style>

        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
        </Style>

        <Style x:Key="KpiLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>
    </Page.Resources>

    <!-- Root Grid fills the entire page -->
    <Grid Padding="24" RowSpacing="20">
        <Grid.RowDefinitions>
            <!-- Page Header -->
            <RowDefinition Height="Auto" />
            <!-- KPI Cards -->
            <RowDefinition Height="Auto" />
            <!-- Chart — takes ALL remaining space -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Page Header -->
        <StackPanel Grid.Row="0" Spacing="2">
            <TextBlock
                Text="Dashboard"
                FontSize="24"
                FontWeight="Bold"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
            <TextBlock
                Text="Overview · Aesthetic Clinic ERP"
                FontSize="13"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- ROW 1 — KPI Cards -->
        <Grid Grid.Row="1" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- This Month's Revenue -->
            <Border Grid.Column="0" Style="{StaticResource KpiCardStyle}">
                <StackPanel Spacing="0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8A4;" FontSize="16" Foreground="#0078D4" />
                        <TextBlock Text="THIS MONTH'S REVENUE" Style="{StaticResource SectionHeaderStyle}" />
                    </StackPanel>
                    <TextBlock x:Name="TxtMonthlyRevenue" Text="₱0.00" Style="{StaticResource KpiValueStyle}" Margin="0,10,0,0" />
                    <TextBlock Text="Total collected this month" Style="{StaticResource KpiLabelStyle}" />
                    <TextBlock x:Name="TxtRevenueTrend" Text="↑ 0% vs last month"
                               FontSize="12" Foreground="#0EA47A" Margin="0,6,0,0" />
                </StackPanel>
            </Border>

            <!-- Total Users -->
            <Border Grid.Column="1" Style="{StaticResource KpiCardStyle}">
                <StackPanel Spacing="0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE716;" FontSize="16" Foreground="#C239B3" />
                        <TextBlock Text="TOTAL USERS" Style="{StaticResource SectionHeaderStyle}" />
                    </StackPanel>
                    <TextBlock x:Name="TxtTotalUsers" Text="0" Style="{StaticResource KpiValueStyle}" Margin="0,10,0,0" />
                    <TextBlock Text="All registered system users" Style="{StaticResource KpiLabelStyle}" />
                    <TextBlock x:Name="TxtUserRoles" Text="0 roles in system"
                               FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Margin="0,6,0,0" />
                </StackPanel>
            </Border>

            <!-- Active Users -->
            <Border Grid.Column="2" Style="{StaticResource KpiCardStyle}">
                <StackPanel Spacing="0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8FA;" FontSize="16" Foreground="#0EA47A" />
                        <TextBlock Text="ACTIVE USERS" Style="{StaticResource SectionHeaderStyle}" />
                    </StackPanel>
                    <TextBlock x:Name="TxtActiveUsers" Text="0" Style="{StaticResource KpiValueStyle}" Margin="0,10,0,0" />
                    <TextBlock Text="Currently active accounts" Style="{StaticResource KpiLabelStyle}" />
                    <TextBlock x:Name="TxtInactiveUsers" Text="0 inactive accounts"
                               FontSize="12" Foreground="#D83B01" Margin="0,6,0,0" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- ROW 2 — Chart fills all remaining vertical space -->
        <Border Grid.Row="2"
                Style="{StaticResource ChartCardStyle}"
                x:Name="ChartCard"
                SizeChanged="ChartCard_SizeChanged">
            <Grid RowSpacing="12">
                <Grid.RowDefinitions>
                    <!-- Chart title -->
                    <RowDefinition Height="Auto" />
                    <!-- Canvas stretches to fill card -->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Chart Header -->
                <StackPanel Grid.Row="0" Spacing="2">
                    <TextBlock Text="Monthly Appointments" FontSize="15" FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                    <TextBlock Text="Total appointments per month · Last 12 months"
                               FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- Canvas — no fixed Height, stretches with the card -->
                <Canvas Grid.Row="1"
                        x:Name="AppointmentChartCanvas"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />
            </Grid>
        </Border>

    </Grid>
</Page>