<ContentDialog
    x:Class="aesth_clic.Views.Roles.SuperAdmin.Modals.DeleteClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Delete Client"
    PrimaryButtonText="Yes, Delete Permanently"
    CloseButtonText="Cancel"
    DefaultButton="Close">

    <ContentDialog.Resources>
        <Style x:Key="DangerLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#C50F1F" />
            <Setter Property="CharacterSpacing" Value="25" />
        </Style>
    </ContentDialog.Resources>

    <StackPanel Spacing="16" Width="420">

        <!-- Icon + Heading -->
        <StackPanel HorizontalAlignment="Center" Spacing="12">
            <Border
                Width="72" Height="72"
                CornerRadius="36"
                Background="#1AC50F1F"
                HorizontalAlignment="Center">
                <FontIcon
                    Glyph="&#xE74D;"
                    FontSize="32"
                    Foreground="#C50F1F"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Border>

            <TextBlock
                x:Name="ClientNameText"
                Text="Client Name"
                FontSize="16"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
        </StackPanel>

        <!-- Divider -->
        <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

        <!-- Warning message -->
        <StackPanel Spacing="8">
            <TextBlock
                Text="Are you sure you want to permanently delete this client account?"
                FontSize="13"
                TextWrapping="Wrap"
                FontWeight="SemiBold"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

            <TextBlock
                Text="This action cannot be undone. All data associated with this client — including their clinic profile, settings, and module assignments — will be permanently removed from the system."
                FontSize="12"
                TextWrapping="Wrap"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Danger strip -->
        <Border
            Background="#1AC50F1F"
            BorderBrush="#40C50F1F"
            BorderThickness="1"
            CornerRadius="6"
            Padding="12,10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <FontIcon
                    Glyph="&#xE814;"
                    FontSize="14"
                    Foreground="#C50F1F"
                    VerticalAlignment="Top" />
                <TextBlock
                    Text="This is a permanent and irreversible action. Only proceed if you are absolutely sure."
                    FontSize="12"
                    FontWeight="SemiBold"
                    TextWrapping="Wrap"
                    Foreground="#C50F1F" />
            </StackPanel>
        </Border>

        <!-- Confirmation checkbox -->
        <CheckBox
            x:Name="ConfirmCheckBox"
            Content="I understand this action cannot be undone"
            FontSize="13"
            Checked="ConfirmCheckBox_Changed"
            Unchecked="ConfirmCheckBox_Changed" />

    </StackPanel>
</ContentDialog>
