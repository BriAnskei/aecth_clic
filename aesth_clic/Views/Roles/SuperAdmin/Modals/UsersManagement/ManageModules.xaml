<ContentDialog
    x:Class="aesth_clic.Views.Roles.SuperAdmin.Modals.ManageModules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Manage Modules"
    PrimaryButtonText="Save Changes"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonClick="OnSaveClicked">

    <ContentDialog.Resources>
        <Style x:Key="SectionLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            <Setter Property="CharacterSpacing" Value="50" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <!--
            KEY FIX: VerticalAlignment="Stretch" forces all three cards to
            grow to the same height as the tallest sibling in the Grid row
            (which is Premium). Without it, Basic and Standard size to their
            own content and Premium overflows its implicit clip boundary.
        -->
        <Style x:Key="TierButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Top" />
        </Style>

        <Style x:Key="FieldHintStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>
    </ContentDialog.Resources>

    <StackPanel Spacing="16" Width="490">

        <!-- Header hint -->
        <StackPanel Spacing="2">
            <TextBlock Text="SELECT MODULE TIER" Style="{StaticResource SectionLabelStyle}" />
            <TextBlock
                x:Name="ClientNameHint"
                Style="{StaticResource FieldHintStyle}"
                Margin="0" />
        </StackPanel>

        <!-- Tier Cards -->
        <Grid ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- BASIC -->
            <Button x:Name="CardBasic"
                    Grid.Column="0" Grid.Row="0"
                    Style="{StaticResource TierButtonStyle}"
                    Tag="Basic"
                    Click="TierCard_Click">
                <StackPanel Spacing="8">
                    <StackPanel Spacing="1">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE91B;" FontSize="14" Foreground="#0078D4" />
                            <TextBlock Text="Basic" FontSize="13" FontWeight="Bold" />
                        </StackPanel>
                        <TextBlock Text="Patient records only"
                                   FontSize="10"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                    <StackPanel Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="10" Foreground="#0EA47A" />
                            <TextBlock Text="Patient records" FontSize="11" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE894;" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                            <TextBlock Text="Appointments" FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE894;" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                            <TextBlock Text="Service menu" FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE894;" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                            <TextBlock Text="Procedures" FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- STANDARD -->
            <Button x:Name="CardStandard"
                    Grid.Column="1" Grid.Row="0"
                    Style="{StaticResource TierButtonStyle}"
                    Tag="Standard"
                    Click="TierCard_Click">
                <StackPanel Spacing="8">
                    <StackPanel Spacing="1">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE91B;" FontSize="14" Foreground="#7B2CBF" />
                            <TextBlock Text="Standard" FontSize="13" FontWeight="Bold" />
                        </StackPanel>
                        <TextBlock Text="Patients + Service menu"
                                   FontSize="10"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                    <StackPanel Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="10" Foreground="#0EA47A" />
                            <TextBlock Text="Patient records" FontSize="11" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE894;" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                            <TextBlock Text="Appointments" FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="10" Foreground="#0EA47A" />
                            <TextBlock Text="Service menu" FontSize="11" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE894;" FontSize="10" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                            <TextBlock Text="Procedures" FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- PREMIUM -->
            <Button x:Name="CardPremium"
                    Grid.Column="2" Grid.Row="0"
                    Style="{StaticResource TierButtonStyle}"
                    Tag="Premium"
                    Click="TierCard_Click">
                <StackPanel Spacing="8">
                    <StackPanel Spacing="1">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE734;" FontSize="14" Foreground="#D4A017" />
                            <TextBlock Text="Premium" FontSize="13" FontWeight="Bold" />
                        </StackPanel>
                        <TextBlock Text="Full features"
                                   FontSize="10"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                    <StackPanel Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="10" Foreground="#0EA47A" />
                            <TextBlock Text="Patient records" FontSize="11" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="10" Foreground="#0EA47A" />
                            <TextBlock Text="Appointments" FontSize="11" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="10" Foreground="#0EA47A" />
                            <TextBlock Text="Service menu" FontSize="11" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="10" Foreground="#0EA47A" />
                            <TextBlock Text="Procedures" FontSize="11" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Button>

        </Grid>

    </StackPanel>
</ContentDialog>
