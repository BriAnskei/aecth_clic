<ContentDialog
    x:Class="aesth_clic.Views.Roles.SuperAdmin.Modals.DeactivateClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Deactivate Client"
    PrimaryButtonText="Yes, Deactivate"
    CloseButtonText="Cancel"
    DefaultButton="Close">

    <ContentDialog.Resources>
        <Style x:Key="WarningIconStyle" TargetType="FontIcon">
            <Setter Property="FontSize" Value="40" />
            <Setter Property="Foreground" Value="#D83B01" />
        </Style>
    </ContentDialog.Resources>

    <StackPanel Spacing="16" Width="420">

        <!-- Icon + Heading -->
        <StackPanel HorizontalAlignment="Center" Spacing="12">
            <Border
                Width="72" Height="72"
                CornerRadius="36"
                Background="#1AD83B01"
                HorizontalAlignment="Center">
                <FontIcon
                    Glyph="&#xEA8C;"
                    FontSize="32"
                    Foreground="#D83B01"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Border>

            <TextBlock
                x:Name="ClientNameText"
                Text="Client Name"
                FontSize="16"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
        </StackPanel>

        <!-- Divider -->
        <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" />

        <!-- Warning message -->
        <StackPanel Spacing="8">
            <TextBlock
                Text="Are you sure you want to deactivate this client account?"
                FontSize="13"
                TextWrapping="Wrap"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}" />

            <TextBlock
                Text="The client will no longer be able to log in to the system. You can reactivate this account at any time from the client management page."
                FontSize="12"
                TextWrapping="Wrap"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
        </StackPanel>

        <!-- Info strip -->
        <Border
            Background="#1AD83B01"
            BorderBrush="#40D83B01"
            BorderThickness="1"
            CornerRadius="6"
            Padding="12,10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <FontIcon
                    Glyph="&#xE783;"
                    FontSize="14"
                    Foreground="#D83B01"
                    VerticalAlignment="Top" />
                <TextBlock
                    Text="This action is reversible. The client's data and settings will be preserved."
                    FontSize="12"
                    TextWrapping="Wrap"
                    Foreground="#D83B01" />
            </StackPanel>
        </Border>

    </StackPanel>
</ContentDialog>
